<?xml version="1.0" encoding="utf-8" ?>
<Defs>
			<!-- Commissar Apparel -->
	
		<!-- === Commissar Coat === -->
	<ThingDef ParentName="GF40K_FlakJacketBase">
		<defName>GF40K_Apparel_Commissar_Coat</defName> <!-- TODO: Edit Def -->
		<label>commissar longcoat</label> <!-- TODO: Edit Name -->
		<description>One of the most recognizeable pieces of attire found in the Imperium of Mankind, this signature, intricately decorated longcoat with golden trim is not just a piece of uniform, it's a sign of a status, meaining that the person wearing it was a successful Schola Progenium graduate, who then dedicated their life to lead Astra Militarum soldiers by an example.</description> <!-- TODO: Edit Desc -->
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>Armor/commissar/_item</texPath> <!-- TODO: Edit Item Texture -->
			<graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
		</graphicData>
		<apparel>
			<wornGraphicPath>Armor/commissar/Commissar</wornGraphicPath> <!-- TODO: Edit Worn Texture -->
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>GF40K_IA_AstraMilitarum</researchPrerequisite> 
			<displayPriority>225</displayPriority> <!-- TODO: Edit Order? -->
		</recipeMaker>
		
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>30000</WorkToMake>
			<Mass>5.5</Mass>
			<Flammability>0.5</Flammability>
			<ArmorRating_Sharp>0.32</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.18</ArmorRating_Blunt>
			<ArmorRating_Heat>0.18</ArmorRating_Heat>
			<Insulation_Cold>20</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>6</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.05</MentalBreakThreshold>
		</equippedStatOffsets>
		
	</ThingDef>
	
		<!-- === Commissar Hat === -->     <!-- basically a copy-pasted authority cap from ideology, for now -->
	<ThingDef ParentName="HatMakeableBase">
		<defName>GF40K_Apparel_Commissar_Hat</defName> <!-- TODO: Edit Def -->
		<label>commissar peaked cap</label> <!-- TODO: Edit Name -->
		<description>Signature headwear of morale officers of the Imperium of Mankind, the commissar's peaked cap is meant to be recognized by any citizen of the Imperium, as it is depicted on hundreds of motivation posters. It is supposed to inspire and instil fear into men, making them fear the commissar much more, than they would fear the enemy.</description> <!-- TODO: Edit Desc -->
		<graphicData>
			<texPath>Armor/commissar/helmet/_item</texPath> <!-- TODO: Edit Tex -->
			<graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
			<drawSize>0.8</drawSize>  <!-- TODO: this? -->
		</graphicData>
		
		<recipeMaker>
			<researchPrerequisite>GF40K_IA_AstraMilitarum</researchPrerequisite> 
			<displayPriority>145</displayPriority> <!-- TODO: Edit Order? -->
		</recipeMaker>
		
		<!-- Crafting Materials -->
        <stuffCategories>
			<li>Metallic</li>
        </stuffCategories>
        <costStuffCount>100</costStuffCount>
        <costList>
            <Cloth>50</Cloth>
        </costList>
		
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.8</Mass>
			<Flammability>0.5</Flammability>
			<ArmorRating_Sharp>0.38</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.18</ArmorRating_Blunt>
			<ArmorRating_Heat>0.28</ArmorRating_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>6</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.05</MentalBreakThreshold>
		</equippedStatOffsets>
		
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter> <!-- ah yes, a child commissar -->
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Armor/commissar/helmet/CommissarHat</wornGraphicPath> <!-- TODO: Edit Tex -->
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
		
		<!--3-->
		<thingClass>ThingColor.ApparelColored</thingClass>
		<modExtensions>
			<li Class="ThingColor.ThingExtension">
				<colorOneStuff>
					<li>Metallic</li>
				</colorOneStuff>
				<colorTwoStuff>
					<li>Fabric</li>
					<li>Leathery</li>
				</colorTwoStuff>
			</li>
		</modExtensions>
		<colorGenerator IsNull="True"/>
	</ThingDef>
</Defs>
